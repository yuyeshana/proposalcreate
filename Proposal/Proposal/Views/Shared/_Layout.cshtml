<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <title>@ViewData["Title"] - 審査システム</title>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head> 
<style>
.modern-header {
  background: linear-gradient(135deg,rgb(21, 107, 169) 0%, rgb(21, 107, 169) 100%);
  box-shadow: 0 2px 20px rgba(19, 106, 168, 0.2);
  border: none;
  position: relative;
  z-index: 1000;
}

.modern-navbar {
  padding: 0.8rem 0;
  border: none;
  background: transparent;
}

.modern-navbar .container-fluid {
  max-width: 100%;
  margin: 0 auto;
  padding: 0 20px;
}

.modern-navbar-brand {
  color: white !important;
  font-size: 1.4rem;
  font-weight: 600;
  text-decoration: none;
  padding: 15px 15px;
  transition: all 0.3s ease;
  letter-spacing: 0.5px;
}

.modern-navbar-brand:hover {
  color: rgba(255, 255, 255, 1) !important;
  transform: translateY(-1px);
}

.main-container {
  background: transparent;
  margin: 0 auto;
  padding: 20px;
  min-height: calc(100vh - 120px);
}
</style>
<body>  
    <header class="modern-header">  
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm modern-navbar">
            <div class="container-fluid">  
                <a class="modern-navbar-brand" asp-area="" asp-controller="Menu" asp-action="Menu">提案書作成提出システム</a>
            </div>  
        </nav>  
    </header>  
    
    <div class="main-container">  
        <main role="main">
                @RenderBody()
        </main>  
    </div>  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    @await RenderSectionAsync("Scripts", required: false)  
</body>  
</html>
